<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.edu.unipe.pos.mobile.registreacidente.VeiculoInsertFragment"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/veiculoInsert_editTextMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca" />

        <EditText
            android:id="@+id/veiculoInsert_editTextModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modelo" />

        <EditText
            android:id="@+id/veiculoInsert_editTextPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Placa" />
        <Button
            android:id="@+id/buttonAddVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="Cadastrar Veiculo"/>

        <include layout="@layout/content_photo_veiculo_list" />

        <ImageView
            android:id="@+id/veiculoInsert_imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_person_black_48px"
            android:background="#00A8EC"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:borderWidth="0dp"
        app:elevation="12dp"
        app:srcCompat="@drawable/ic_menu_camera"
        android:foregroundGravity="center"
        android:foregroundTint="@android:color/white"
        android:backgroundTint="@color/colorPrimary"/>

</FrameLayout>

